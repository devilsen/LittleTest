<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.sam.uitest">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_touch_app_green_700_24dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".basic.BasicTestActivity" />
        <activity android:name=".intent.IntentTestActivity" />
        <activity android:name=".idling.IdlingTestActivity" />
        <activity android:name=".recycler.RecyclerViewTestActivity" />
        <activity android:name=".basic.ShowTextActivity" />
        <activity android:name=".intent.ContactsActivity" />
        <activity android:name=".UITestActivity" />

    </application>

</manifest>


