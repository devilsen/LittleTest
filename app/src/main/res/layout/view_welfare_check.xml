<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/welfare_check_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/welfare_zhonhxin2" />

    <ImageView
        android:id="@+id/welfare_check_exit_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/welfare_quxiao" />

    <EditText
        android:id="@+id/welfare_check_edit"
        android:layout_width="@dimen/welfare_btn_width"
        android:layout_height="@dimen/welfare_btn_height"
        android:layout_below="@id/welfare_check_bg"
        android:layout_centerHorizontal="true"
        android:background="@drawable/welfare_edit_background"
        android:hint="请输入您的OA密码"
        android:padding="14dp"
        android:singleLine="true"
        android:textColorHint="#fc7e23"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/welfare_check_btn"
        android:layout_width="@dimen/welfare_btn_width"
        android:layout_height="@dimen/welfare_btn_height"
        android:layout_below="@id/welfare_check_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/welfare_btn"
        android:src="@drawable/welfare_dianjilingqu" />

</RelativeLayout>