<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BadgeTextView">
        <attr name="icon" format="reference" />
        <attr name="title" format="string" />
        <attr name="drawablePadding" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />

    </declare-styleable>

    <declare-styleable name="SpringIndicator">
        <!--tab text color -->
        <attr name="siTextColor" format="reference" />
        <!--tab text color which is selected-->
        <attr name="siSelectedTextColor" format="reference" />
        <!--tab item bg -->
        <attr name="siTextBg" format="reference" />
        <!--tab text size-->
        <attr name="siTextSize" format="dimension" />
        <!--indicator bg color-->
        <attr name="siIndicatorColor" format="reference" />
        <!--indicator bg colors. should equals your titles count-->
        <attr name="siIndicatorColors" format="reference" />
        <!--max indicator radius-->
        <attr name="siRadiusMax" format="dimension" />
        <!--min indicator radius when moving-->
        <attr name="siRadiusMin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BubbleIndicator">
        <attr name="leftRightGap" format="dimension" />
        <attr name="childPadding" format="dimension" />
        <attr name="bgCircularColor" format="color" />
        <attr name="defCircularColor" format="color" />
    </declare-styleable>
</resources>